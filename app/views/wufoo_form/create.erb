First, please create a wufoo form. Make the FIRST FIELD a hidden string field for the TOKEN


<% form_for :wufoo_form, @wufoo_form do |f| %>
  <ul class="create_wufoo">
    <li>
      <label id="subdomain"> Subdomain </label>
      <span>
        <%= f.text_field :subdomain %>
      </span>
    </li>
    <li>
      <label id="form_name"> Form name </label>
      <span>
        <%= f.text_field :form_name %>
      </span>
    </li>
    <li>
      <label id="api_key"> API Key </label>
      <span>
        <%= f.text_field :api_key %>
      </span>
    </li>
  </ul>
  <ul class="create_wufoo right">
    <li>
      <label id="recipient_emails"> Recipient Emails </label>
      <span>
        <%= f.text_area :recipient_emails, :cols => 50, :rows => 6 %>
      </span>
    </li>
    <li>
      <%= submit_tag 'create' %>
    </li>
  <% end %>
</ul>
